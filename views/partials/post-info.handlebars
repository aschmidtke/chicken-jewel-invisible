<article class="post">
  <div class="text-center bg-gray-100 border-2 border-green-500 border-opacity-50 rounded-lg divide-y divide-black overflow-hidden shadow-lg">
    <div class="title">
      <a class="link" href="/post/{{id}}">{{title}}</a>
      <br>
      <a href="{{post_url}}" target="_blank">{{format_url post_url}}</a>
    </div>
    <div class="meta">
      <div>
            {{user.username}} on {{format_date created_at}}
        </div>
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
  </div>
</article>
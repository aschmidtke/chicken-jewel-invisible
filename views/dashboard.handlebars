
{{#if posts.length}}
<section>
    <h2 class="text-center">Your Posts</h2>
    <div class="grid grid-cols-3">
        {{#each posts as |post|}}
        <div class="p-8 text-center">
            {{> post-info post}}
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<div class="text-center">
<button class="bg-green-300 border-4 border-green-500 shadow-sm rounded-full py-3 px-6" type="submit">
    <a class="link" href="dashboard/new"> Add a New Post </a>
</button>
</div>

<script src="/javascript/add-post.js"></script>

